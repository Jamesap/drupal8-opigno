{
    "name":         "opigno/opigno-composer",
    "description":  "Opigno LMS",
    "type":         "project",
    "license":      "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url":  "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package" : {
                "name" :    "enyo/dropzone",
                "version" : "v5.5.0",
                "type" :    "drupal-library",
                "source" : {
                    "url" :         "https://github.com/enyo/dropzone.git",
                    "type" :        "git",
                    "reference" :   "origin/master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "mozilla/pdf.js",
                "version": "dev-master",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/mozilla/pdf.js",
                    "type": "git",
                    "reference": "origin/gh-pages"
                }
            }
        }
    ],
    "require": {
       	"wikimedia/composer-merge-plugin":      "dev-master",
        "composer/installers":                  "^1.2",
        "cweagans/composer-patches":            "^1.6",
        "drupal-composer/drupal-scaffold":      "^2.5",
		"drupal/calendar":                      "1.x-dev#73e2979",
        "drupal/view_mode_selector":            "1.x-dev#11c9ad2",
		"drupal/views_role_based_global_text":  "1.x-dev#550f8e0",
      	"drupal/media_entity_browser":          "2.x-dev#c75921d",
		"drupal/pdf":                           "1.x-dev#f558259",
		"opigno/opigno_lms":                    "2.8.0",
        "platformsh/config-reader": "^2.3",
        "drupal/redis": "^1.2"
    },
    "require-dev": {
        "drush/drush":      "^9.1",
        "drupal/console":   "~1.0"
    },
    "replace": {
		"h5p/h5p-core": "*",
		"h5p/h5p-editor": "*"
    },
    "config": {
        "preferred-install": {
            "drupal/view_mode_selector":            "source",
            "drupal/views_role_based_global_text":  "source",
            "drupal/calendar":                      "source",
            "*":                                    "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core":                     ["type:drupal-core"],
            "web/libraries/{$name}":        ["type:drupal-library"],
            "web/modules/contrib/{$name}":  ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}":   ["type:drupal-theme"],
            "drush/Commands/{$name}":       ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig":  "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "enable-patching": true,
		"composer-exit-on-patch-failure": false,
        "patchLevel": {
            "drupal/core": "-p2"
        } 
    }
}
